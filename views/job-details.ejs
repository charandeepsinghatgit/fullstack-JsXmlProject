<%- include("partials/header") %>

<div class="container">
    <div class="job-detail-box">
        
        <h1 class="detail-heading"><%= job.title %></h1>

        <p><span class="info-label">Company:</span> <%= job.company.display_name %></p>

        <p><span class="info-label">Location:</span> <%= job.location.display_name %></p>

        <% if (job.salary_min) { %>
        <p><span class="info-label">Salary Range:</span>
            <%= job.salary_min.toLocaleString() %> - 
            <%= job.salary_max.toLocaleString() %>
        </p>
        <% } %>

        <% if (country) { %>
            <h3>Country Insights</h3>
            <img src="<%= country.flags.png %>" class="flag">

            <p><span class="info-label">Capital:</span> <%= country.capital %></p>
            <p><span class="info-label">Region:</span> <%= country.region %></p>
            <p><span class="info-label">Languages:</span> 
                <%= Object.values(country.languages).join(", ") %>
            </p>
            <p><span class="info-label">Timezones:</span> <%= country.timezones.join(", ") %></p>
        <% } %>

        <% if (convertedSalary) { %>
            <h3>Converted Salary</h3>
            <p><strong><%= convertedSalary %></strong> in <%= targetCurrency %></p>
        <% } %>

        <a href="/jobs" class="btn">â¬… Back to Jobs</a>
    </div>
</div>

<%- include("partials/footer") %>
